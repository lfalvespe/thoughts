<div class="dashboard">
    <div class="title-container">
        <h2>Dashboard</h2>
        <a href="/thoughts/add" class="btn">Criar Pensamento</a>
    </div>
    <h3>Seus pensamentos</h3>
    <ul>

        {{#if emptyThoughts}}
        <p>Nenhum pensamento aqui! come√ße a <a href="/thoughts/add">criar</a></p>
        {{/if}}
        {{#each thoughts}}
            <li>
                <span class="label">{{this.title}}</span>
                <span class="actions">
                    <a href="/thoughts/edit/{{this.id}}" class="btn">Editar</a>
                    <form action="/thoughts/remove" method="POST">
                        <input type="hidden" name="id" value="{{this.id}}">
                        <input type="submit" value="Excluir" class="btn">
                    </form>
                </span>
            </li>
        {{/each}}
    </ul>
</div>